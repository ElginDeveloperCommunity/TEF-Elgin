<Window x:Class="WpfTesteVs.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTesteVs"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="API TEF Elgin" Height="250" Width="350" SizeToContent="Manual">
    <Grid>
        <Label Content="Configuração" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.145,-0.981" FontSize="14" FontWeight="Bold"/>
        <Label Content="Selecione o tipo de operação" HorizontalAlignment="Left" Margin="50,48,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="CBox" HorizontalAlignment="Left" Margin="59,79,0,0" VerticalAlignment="Top" Width="208" IsReadOnly="True">
            <ComboBoxItem Content="Operações TEF" IsSelected="True"/>
            <ComboBoxItem Content="Operações Administrativas" />
        </ComboBox>
        <Button x:Name="BtnCarregar" Content="Carreagar Funções" HorizontalAlignment="Left" Margin="59,139,0,0" VerticalAlignment="Top" Width="208" Height="40" IsDefault="True"  Click="BtnCarregar_Click"/>

    </Grid>
</Window>